{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "array-bracket-spacing": [
            "error",
            "always"
        ],
        "arrow-body-style": [
            "error",
            "always"
        ],
        "no-confusing-arrow": [
            "error"
        ],
        "arrow-parens": [
            "error",
            "always"
        ],
        "arrow-spacing": [
            "error",
            { "before": true, "after": true }
        ],
        "comma-dangle": [
            "error", "never"
        ],
        "comma-spacing": [
            "error",
            { "before": false, "after": true}
        ],
        "implicit-arrow-linebreak": [
            "error"
        ],
        "camelcase": [
            "error"
        ],
        "func-style": [
            "error",
            "declaration",
            { "allowArrowFunctions": true }
        ],
        "no-eq-null": [
            "error"
        ],
        "no-implicit-coercion": [
            "error"
        ],
        "no-implicit-globals": [
            "error"
        ],
        "no-label-var": [
            "error"
        ],
        "no-loop-func": [
            "error"
        ],
        "no-multi-str": [
            "error"
        ],
        "no-multi-assign": [
            "error"
        ],
        "no-new": [
            "error"
        ],
        "no-multi-spaces": [
            "error"
        ],
        "no-whitespace-before-property": [
            "error"
        ],
        "keyword-spacing": [
            "error",
            { "before": true }
        ],
		"no-useless-computed-key": [
			"error"
		],
		"no-return-assign": [
			"error"
		],
		"no-return-await": [
			"error"
		],
		"no-negated-condition": [
			"error"
		],
		"new-cap": [
			"error"
		]
    }
}
